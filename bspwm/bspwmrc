#! /bin/sh
pgrep -x sxhkd > /dev/null || sxhkd &

bspc config focused_border_color "#3A3F4B"
bspc config active_border_color "#111314"
bspc config normal_border_color "#111314"

wmname LG3D

bspc monitor -d 1 2 3 4 5 6

bspc config border_width         2
bspc config window_gap           2
bspc config split_ratio          0.52


bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_corner

bspc config focus_follows_pointer true
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# 1 > web
bspc rule -a Chromium desktop='^1'
bspc rule -a firefox desktop='^1' follow=on focus=on

# 2 > code
bspc rule -a Code desktop='^2' follow=on focus=on 
bspc rule -a Code follow=on focus=on 

# 3 > social-media
bspc rule -a discord desktop='^3'
bspc rule -a telegram desktop='^3'

# 4 > files
bspc rule -a Thunar desktop='^4' follow=on
bspc rule -a Emacs state=tiled

# bspc rule -a Kupfer.py focus=on
# bspc rule -a Screenkey manage=off

$HOME/.screenlayout/display.sh
picom &
$HOME/.config/polybar/launch.sh
# feh --bg-scale /home/alex/dotfiles/images/3991.png
feh --bg-scale "$(< "${HOME}/.cache/wal/wal")"  

